<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boundary.UserHomeBoundary">
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="315.199951171875" minWidth="10.0" prefWidth="268.79998779296875" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="318.4000244140625" minWidth="10.0" prefWidth="247.20001220703125" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nome" wrappingWidth="99.859375" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Cognome" GridPane.rowIndex="1" />
            <Label fx:id="lbNome" GridPane.columnIndex="1" />
            <Label fx:id="lbCognome" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tipo utente" GridPane.rowIndex="2" />
            <Label fx:id="lbTipoUtente" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <HBox prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
               <children>
                  <CheckBox fx:id="checkOrganizzatore" mnemonicParsing="false" onAction="#handleCheckOrganizzatore" text="Organizzatore" />
                  <CheckBox fx:id="checkGiocatore" mnemonicParsing="false" onAction="#handleCheckGiocatore" text="Giocatore" />
               </children>
            </HBox>
         </children>
      </GridPane>
   </center>
   <top>
      <Label fx:id="lbUsername" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font></Label>
   </top>
</BorderPane>
